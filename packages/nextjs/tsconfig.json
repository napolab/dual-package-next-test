{
  "compilerOptions": {
    "incremental": true,
    "tsBuildInfoFile": "./.tsbuildinfo",
    "composite": true,
    "outDir": "lib",
    "target": "es2018",
    "lib": ["ESNext"],
    "module": "ESNext",
    "moduleResolution": "node",
    "baseUrl": "./",
    "rootDir": "src",
    "paths": {},
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "jsx": "preserve",
    "allowJs": true,
    "noEmit": true,
    "isolatedModules": true
  },
  "include": ["src"],
  "exclude": ["node_modules"]
}
